{
  "name": "patrick-tools",
  "version": "1.0.0",
  "description": "A collection of various tools and utilities",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run dev --silent",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "test": "vitest run --coverage"
  },
  "author": "Patrick Sletvold <patricksletvold@hotmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "big.js": "^6.1.1",
    "canvg": "^3.0.9",
    "core-js": "^3.20.0",
    "lodash.chunk": "^4.2.0",
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.7"
  },
  "devDependencies": {
    "@types/big.js": "^6.1.2",
    "@types/lodash.chunk": "^4.2.6",
    "@types/lodash.debounce": "^4.0.6",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@vitejs/plugin-react": "^1.0.7",
    "autoprefixer": "^10.4.0",
    "ava": "^3.15.0",
    "c8": "^7.11.0",
    "prettier": "2.5.1",
    "react-refresh": "^0.11.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.2",
    "vitest": "^0.1.19"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 3 Safari versions",
    "last 4 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "ava": {
    "extensions": {
      "ts": "module",
      "mjs": true
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
