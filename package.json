{
  "name": "patrick-tools",
  "version": "1.0.0",
  "description": "A collection of various tools and utilities",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run dev --silent",
    "dev": "webpack serve --mode=development --hot",
    "build": "cross-env NODE_ENV=production webpack --mode=production --env production --progress",
    "format": "prettier --write .",
    "test": "ava"
  },
  "author": "Patrick Sletvold <patricksletvold@hotmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "big.js": "^6.1.1",
    "core-js": "^3.20.0",
    "lodash.chunk": "^4.2.0",
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.3",
    "autoprefixer": "^10.4.0",
    "ava": "^3.15.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.3.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "prettier": "2.5.1",
    "react-refresh": "^0.11.0",
    "style-loader": "^3.3.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 3 Safari versions",
    "last 4 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "ava": {
    "extensions": {
			"ts": "module",
      "mjs": true
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
  }
}
